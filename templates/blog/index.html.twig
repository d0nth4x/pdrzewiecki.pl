{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="my-5">
    {% for post in posts %}
        <div class="card mb-5">
            <div class="card-body">
                <p class="card-text">{{ post.content }}</p>
            </div>
            <div class="card-footer">
                {{ post.createDate|date("m d Y") }}
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}
